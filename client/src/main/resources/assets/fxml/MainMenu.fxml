<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #0A0A0A;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.arcadehub.client.controller.MainMenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Text fill="#39FF14" strokeType="OUTSIDE" strokeWidth="0.0" text="ArcadeHub">
        <font>
            <Font name="arcade" size="72.0" />
        </font>
        <VBox.margin>
            <Insets bottom="40.0" />
        </VBox.margin>
    </Text>

    <Button fx:id="startGameButton" mnemonicParsing="false" onAction="#handleStartGame" prefWidth="200.0" style="-fx-background-color: #FF007F; -fx-text-fill: white; -fx-font-size: 24px; -fx-background-radius: 12;" text="Start Game">
        <font>
            <Font name="arcade" size="24.0" />
        </font>
    </Button>
    <Button fx:id="leaderboardsButton" mnemonicParsing="false" onAction="#handleLeaderboards" prefWidth="200.0" style="-fx-background-color: #FF007F; -fx-text-fill: white; -fx-font-size: 24px; -fx-background-radius: 12;" text="Leaderboards">
        <font>
            <Font name="arcade" size="24.0" />
        </font>
    </Button>
    <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#handleSettings" prefWidth="200.0" style="-fx-background-color: #FF007F; -fx-text-fill: white; -fx-font-size: 24px; -fx-background-radius: 12;" text="Settings">
        <font>
            <Font name="arcade" size="24.0" />
        </font>
    </Button>
    <Button fx:id="exitButton" mnemonicParsing="false" onAction="#handleExit" prefWidth="200.0" style="-fx-background-color: #FF007F; -fx-text-fill: white; -fx-font-size: 24px; -fx-background-radius: 12;" text="Exit">
        <font>
            <Font name="arcade" size="24.0" />
        </font>
    </Button>
</VBox>
